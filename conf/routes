GET         /editGroupForm                         controllers.InventoryController.editGroupForm(id: Long)
POST        /doEditGroup                           controllers.InventoryController.doEditGroup
GET         /doDeleteGroup                         controllers.InventoryController.doDeleteGroup(id: Long)

#test assertion management
