POST        /doCreateAssertion                     controllers.InventoryController.doCreateAssertion
GET         /editAssertionForm                     controllers.InventoryController.editAssertionForm(id: Long)
POST        /doEditAssertion                       controllers.InventoryController.doEditAssertion
GET         /doDeleteAssertion                     controllers.InventoryController.doDeleteAssertion(id: Long)

#test case management
GET         /createCaseForm                        controllers.InventoryController.createCaseForm(assertionId: Long)
POST        /doCreateCase                          controllers.InventoryController.doCreateCase
GET         /editCaseForm                          controllers.InventoryController.editCaseForm(id: Long)
POST        /doEditCase                            controllers.InventoryController.doEditCase
GET         /doDeleteCase                          controllers.InventoryController.doDeleteCase(id: Long)

#test configuration management
GET         /doDeleteJob                           controllers.InventoryController.doDeleteJob(id: Long)

GET         /createJobForm                         controllers.InventoryController.createJobForm(testCaseId: Long)
POST        /doCreateJob                           controllers.InventoryController.doCreateJob()
GET         /editJobForm                           controllers.InventoryController.editJobForm(id: Long)
GET         /displayJob                            controllers.InventoryController.displayJob(id: Long)
POST        /doEditJob                             controllers.InventoryController.doEditJob()

#test asset management
POST        /doCreateTestAsset                     controllers.TestAssetController.doCreateTestAsset
GET         /createNewAssetForm                    controllers.TestAssetController.createNewAssetForm
GET         /editAssetForm                         controllers.TestAssetController.editAssetForm(id: Long)
POST        /doEditAsset                           controllers.TestAssetController.doEditAsset
GET         /doDeleteAsset                         controllers.TestAssetController.doDeleteAsset(id: Long)
GET         /downloadAsset                         controllers.TestAssetController.downloadAsset(id: Long)

#TESTING
POST        /testme                                controllers.Tester.test
GET         /runTest                               controllers.Tester.runTest(id: Long, userId: Long)
GET         /syncTest                              controllers.Tester.syncTest(id: Long, userId: Long)

#test run listing
GET         /listTestRunsForm                      controllers.InventoryController.listTestRuns(configurationId: Long)
POST        /doListTestRuns                        controllers.InventoryController.doListTestRuns()
GET         /viewReport                            controllers.InventoryController.viewReport(testRunId: Long, type: String)

#User History listing
GET         /viewUserHistory                       controllers.InventoryController.viewUserHistory(testRunId: Long)
POST        /doViewUserHistory                     controllers.InventoryController.doViewUserHistory()


#Wrappers
GET         /createNewWrapperForm                  controllers.InventoryController.createNewWrapperForm
POST        /doCreateWrapper                       controllers.InventoryController.doCreateWrapper
GET         /doDeleteWrapper                       controllers.InventoryController.doDeleteWrapper(id: Long)
GET         /editWrapperForm                       controllers.InventoryController.editWrapperForm(id: Long)
POST        /doEditWrapper                         controllers.InventoryController.doEditWrapper

